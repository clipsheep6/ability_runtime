import("//build/ohos.gni")
import("//foundation/ability/ability_runtime/aafwk.gni")
ohos_shared_library("mysamanager_napi") {
  sources = [
    "js_my_sa_mgr.cpp",
    "my_native_module.cpp",
  ]

  configs = [ "${services_path}/common:common_config" ]

  include_dirs = []

  deps = [
    "${aafwk_path}/interfaces/kits/napi/aafwk/inner/napi_common:napi_common",
    "${innerkits_path}/my_sa:my_sa_mgr",
  ]

  external_deps = [
    "ability_base:zuri",
    "ability_runtime:ability_manager",
    "ability_runtime:abilitykit_native",
    "ability_runtime:runtime",
    "bundle_framework:appexecfwk_base",
    "hiviewdfx_hilog_native:libhilog",
  ]

  if (!ability_runtime_graphics) {
    external_deps += [
      "ipc:ipc_core",
      "utils_base:utils",
    ]
  }

  relative_install_dir = "module/application"

  subsystem_name = "aafwk"
  part_name = "ability_runtime"
}