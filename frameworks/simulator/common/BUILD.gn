import("//build/ohos.gni")
import("//foundation/ability/ability_runtime/ability_runtime.gni")

config("ability_simulator_common_config") {
  include_dirs = [
    "${simulator_path}/common/include",
    "${ability_runtime_services_path}/common/include",
  ]
}

ohos_shared_library("ability_simulator_common") {
  if (is_mingw) {
    defines = [
      "WINDOWS_PLATFORM",
      "NOGDI",
    ]
  }

  if (is_mingw) {
    platform = "windows"
  } else if (is_mac) {
    platform = "mac"
  } else {
    platform = "linux"
  }

  cflags = [ "-std=c++17" ]

  include_dirs = [ "${ability_runtime_innerkits_path}/runtime/include" ]

  sources = [ "src/configuration.cpp" ]

  public_configs = [ ":ability_simulator_common_config" ]

  deps = []

  external_deps = [ "hilog_native:libhilog_$platform" ]

  part_name = "ability_runtime"
  subsystem_name = "ability"
}
