import("//build/test.gni")
import("//foundation/ability/ability_runtime/aafwk.gni")

module_output_path = "aafwk_standard/interfaces"

ohos_benchmarktest("BenchmarkTestForAbilityContext") {
  module_out_path = module_output_path
  sources = [ "ability_context_test.cpp" ]

  cflags = []
  if (target_cpu == "arm") {
    cflags += [ "-DBINDER_IPC_32BIT" ]
  }

  deps = [
    "${aafwk_path}/frameworks/native/ability/native:abilitykit_native",
    "${aafwk_path}/interfaces/inner_api/ability_manager:ability_manager",
    "${ability_base_path}:want",
    "//third_party/benchmark:benchmark",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "hiviewdfx_hilog_native:libhilog",
    "ipc:ipc_core",
    "utils_base:utils",
  ]
}

group("benchmarktest") {
  testonly = true
  deps = []

  deps += [
    # deps file
    ":BenchmarkTestForAbilityContext",
  ]
}
