import("//build/test.gni")
import("//foundation/ability/ability_runtime/ability_runtime.gni")

module_output_path = "ability_runtime/child_process_manager"

ohos_unittest("child_process_manager_test") {
  module_out_path = module_output_path

  configs = [ "${ability_runtime_services_path}/common:common_config" ]

  if (target_cpu == "arm") {
    cflags = [ "-DBINDER_IPC_32BIT" ]
  }

  include_dirs = [ "include" ]

  sources = [
    "child_process_manager_test.cpp",
    "mock_bundle_manager.cpp",
    "sys_mgr_client_mock.cpp",
  ]

  deps = [
    "${ability_runtime_native_path}/ability/native:ability_business_error",
    "${ability_runtime_path}/interfaces/inner_api/child_process_manager:child_process_manager",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = [
    "ability_runtime:abilitykit_native",
    "ability_runtime:base_ability_kit_native",
    "bundle_framework:appexecfwk_base",
    "bundle_framework:appexecfwk_core",
    "c_utils:utils",
    "hilog:libhilog",
    "ipc:ipc_core",
    "samgr:samgr_proxy",
  ]
}

group("unittest") {
  testonly = true
  deps = [ ":child_process_manager_test" ]
}
